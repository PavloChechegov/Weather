<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/activity_horizontal_margin"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                tools:context="com.example.weather.app.WeatherFragment">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/tvCity"
              android:textSize="12sp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tvTitle"
            android:textSize="24sp"
            android:textColor="@color/accent_material_light"
            android:layout_alignTop="@+id/tvDescWeather" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tvDescription"
            android:textSize="24sp"
            android:textColor="@color/accent_material_light"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>

    <com.github.pwittchen.weathericonview.WeatherIconView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivIconWeather"
            custom:weatherIconColor="@color/accent_material_light"
            custom:weatherIconSize="100"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/tvTemperature"
              android:textColor="@color/accent_material_light"
              android:textSize="72sp"
              android:numeric="integer"
              android:layout_centerVertical="true" android:layout_alignRight="@+id/tvLastUpdate"
              android:layout_alignEnd="@+id/tvLastUpdate"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/tvLastUpdate"
              android:layout_alignParentBottom="true"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weather_description"
            android:id="@+id/tvDescWeather"
            android:textSize="24sp"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/tvCity"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>


</RelativeLayout>

